{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    { "label": "run-osx-qemu",
      "dependsOn": [
        "trace-osx-qemu"
      ],
    },
    {
      "label": "trace-osx-qemu",
      "dependsOn": [
        "vm"
      ],
      "type": "shell",
      "command": "virsh -c qemu+tcp://gateway.docker.internal/session qemu-monitor-command --hmp DebugKernel hostfwd_add ::17010-:17010 && virsh -c qemu+tcp://gateway.docker.internal/session console DebugKernel console1",
      "presentation": {
        "echo": false,
        "clear": true,
        "group": "vm"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": ".",
          }
        }
      ]
    },
    {
      "label": "vm",
      "type": "shell",
      "command": "virsh -c qemu+tcp://gateway.docker.internal/session define /workspaces/linux/.vscode/DebugKernel-NativeQemu-aarch64.xml && virsh -c qemu+tcp://gateway.docker.internal/session start DebugKernel --console --autodestroy --paused",
      "presentation": {
        "echo": false,
        "clear": true,
        "group": "vm"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": ".",
          }
        }
      ]
    },
    {
      "label": "build",
      "type": "shell",
      "command": "mkdir -p .build;make O=.build -j8 && echo installing new kernel && cp .build/arch/arm64/boot/Image /tmp",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "group": "build"
      },
      "options": {
        "cwd": "/workspaces/linux"
      }
    },
    {
      "label": "qemu",
      "type": "shell",
      "command": "/home/v9fs-test/test/qemu.bash && tail -f /home/v9fs-test/qemu.log && kill `cat /home/v9fs-test/qemu.pid`",
      "presentation": {
        "echo": false,
        "clear": true,
        "group": "test"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": ".",
          }
        }
      ]
    },
    { "label": "test",
      "type": "shell",
      "command": "/home/v9fs-test/test/test.bash",
      "group": "test",
      "presentation": {
        "echo": false,
        "clear": true,
        "group": "test"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "beginsPattern": "^QEMU Started",
            "endsPattern": ".",
          }
        }
      ],
      "options": {
        "cwd": "/home/v9fs-test/test"
      }
    },
  ]
}
